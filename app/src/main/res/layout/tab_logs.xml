<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Log Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bluetooth Communication Log"
            android:textColor="#333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnClearLogs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:paddingHorizontal="16dp"
            android:text="Clear"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Log Container -->
    <com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Stats Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="horizontal"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txtLogStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total: 0 | Sent: 0 | Received: 0"
                    android:textColor="#666"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Log List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewLogs"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/txtEmptyLogs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="32dp"
                android:text="No logs yet\n\nConnect to a device and start controlling"
                android:textAlignment="center"
                android:textColor="#999"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>