<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <!-- Default ActionBar/Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2196F3"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        app:titleTextColor="#FFFFFF" />

    <!-- Status Indicator (Now below ActionBar) -->
    <LinearLayout
        android:id="@+id/connectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F2FD"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Connected"
            android:textColor="#F44336"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Controls Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/standard_padding">

        <!-- Add Switches Button -->
        <Button
            android:id="@+id/btnAddSwitches"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/standard_margin"
            android:text="Add/Edit Switches" />

        <!-- Dynamic Switches Grid Container -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <GridView
                android:id="@+id/switchesGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="@dimen/grid_spacing"
                android:numColumns="4"
                android:padding="@dimen/card_padding"
                android:scrollbars="vertical"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/grid_spacing" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Logs Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Log Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Communication Log"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnClearLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F44336"
                android:paddingHorizontal="16dp"
                android:text="Clear"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Stats Bar -->
        <TextView
            android:id="@+id/txtLogStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:gravity="center"
            android:padding="8dp"
            android:paddingBottom="8dp"
            android:text="Total: 0 | Sent: 0 | Received: 0 | Errors: 0"
            android:textColor="#666"
            android:textSize="12sp" />

        <!-- Log List Container -->
        <ScrollView
            android:id="@+id/scrollViewLogs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/logsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <!-- Empty State -->
        <TextView
            android:id="@+id/txtEmptyLogs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="32dp"
            android:text="No logs yet\n\nConnect to a device and start controlling"
            android:textAlignment="center"
            android:textColor="#999"
            android:textSize="16sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>