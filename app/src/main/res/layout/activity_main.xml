<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- TOP TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:fitsSystemWindows="true"
        app:titleTextColor="#111" />

    <!-- CONNECTION STATUS -->
    <LinearLayout
        android:id="@+id/connectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF8E1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Connected"
            android:textColor="#E65100"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


    <!-- CONTENT AREA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- VOICE STATUS CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF"
            android:radius="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtListeningStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="Tap microphone to speak"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <!-- SWITCHES GRID CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:radius="20dp">

            <GridView
                android:id="@+id/switchesGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="14dp"
                android:numColumns="2"
                android:padding="16dp"
                android:verticalSpacing="14dp" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <!-- LOGS SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- LOG HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Communication Log"
                android:textColor="#111"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnClearLogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D32F2F"
                android:paddingHorizontal="20dp"
                android:text="Clear"
                android:textColor="#FFFFFF" />

        </LinearLayout>


        <!-- LOG STATS BAR -->
        <TextView
            android:id="@+id/txtLogStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F3F5"
            android:gravity="center"
            android:padding="10dp"
            android:text="Total: 0 | Sent: 0 | Received: 0 | Errors: 0"
            android:textColor="#666"
            android:textSize="12sp" />


        <!-- LOG LIST -->
        <ScrollView
            android:id="@+id/scrollViewLogs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/logsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>


        <!-- EMPTY STATE -->
        <TextView
            android:id="@+id/txtEmptyLogs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="24dp"
            android:text="No logs yet\n\nConnect to a device to start"
            android:textAlignment="center"
            android:textColor="#999"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>
